<script>
    $(document).ready(function() {
        // Sélection des éléments du bouton flottant et de la section de contenu
        const floatingButtonContainer = $('.floating-button-container');
        const contentSection = $('#content-section');

        // Fonction pour mettre à jour la position du bouton flottant en fonction du défilement
        function updateButtonPosition() {
            const contentTop = contentSection.offset().top;
            const contentBottom = contentTop + contentSection.outerHeight();
            const scrollTop = $(window).scrollTop();
            const windowHeight = $(window).height();

            // Vérification de la position par rapport au bas de la page pour déterminer le positionnement du bouton flottant
            if (scrollTop + windowHeight > contentBottom) {
                floatingButtonContainer.css({
                    position: 'absolute',
                    bottom: '20px'
                });
            } else {
                floatingButtonContainer.css({
                    position: 'fixed',
                    bottom: '20px'
                });
            }
        }

        // Gestionnaire d'événements de défilement pour mettre à jour la position du bouton flottant
        $(window).on('scroll', updateButtonPosition);
        updateButtonPosition();

        // Envoi de la demande d'ami via AJAX
        $('.add-user-btn').click(function() {
            // Récupération des informations du post et de l'utilisateur
            const postFrame = $(this).closest('.post-frame');
            const userId = postFrame.data('user-id');
            // Requête AJAX pour envoyer la demande d'ami
            $.ajax({
                url: '',
                type: 'POST',
                data: {
                    action: 'send_friend_request',
                    receiver_id: userId
                },
                success: function(response) {
                    // Traitement de la réponse JSON
                    const data = JSON.parse(response);
                    if (data.status === 'success') {
                        alert('Demande d\'ami envoyée avec succès!');
                    }
                }
            });
        });

        // Fonctionnalité Like ou Unlike d'un post
        $('.like-btn').click(function() {
            // Récupération des informations du post et du bouton Like
            const postFrame = $(this).closest('.post-frame');
            const postId = postFrame.data('post-id');
            const likeBtn = $(this).find('img');
            // Requête AJAX pour gérer le Like
            $.ajax({
                url: '',
                type: 'POST',
                data: {
                    action: 'like_post',
                    post_id: postId
                },
                success: function(response) {
                    // Traitement de la réponse JSON
                    const data = JSON.parse(response);
                    if (data.status === 'liked') {
                        likeBtn.attr('src', 'images/liked.png');
                    } else if (data.status === 'unliked') {
                        likeBtn.attr('src', 'images/unliked.png');
                    }
                }
            });
        });

        // Fonctionnalité Repost d'un post
        $('.repost-btn').click(function() {
            // Récupération des informations du post et du bouton Repost
            const postFrame = $(this).closest('.post-frame');
            const postId = postFrame.data('post-id');
            const repostBtn = $(this).find('img');
            // Requête AJAX pour gérer le Repost
            $.ajax({
                url: '',
                type: 'POST',
                data: {
                    action: 'repost',
                    post_id: postId
                },
                success: function(response) {
                    // Traitement de la réponse JSON
                    const data = JSON.parse(response);
                    if (data.status === 'reposted') {
                        repostBtn.attr('src', 'images/reposted.png');
                    }
                }
            });
        });
    });

    // Fonction pour la gestion du carrousel d'images
    document.addEventListener('DOMContentLoaded', function() {
        const slides = document.querySelectorAll('.carousel-image');
        let currentSlide = 0;
        const nextButton = document.querySelector('.next');
        const prevButton = document.querySelector('.prev');
        const events = document.querySelectorAll('section ul li');

        // Fonction pour afficher les diapositives et les événements liés
        function showSlides() {
            slides.forEach((slide, index) => {
                slide.classList.remove('center');
                if (index === currentSlide) {
                    slide.classList.add('center');
                }
            });

            events.forEach(event => {
                event.classList.remove('event-highlight');
                if (event.dataset.event == slides[currentSlide].dataset.event) {
                    event.classList.add('event-highlight');
                }
            });
        }

        // Gestionnaire d'événements pour le bouton Suivant du carrousel
        nextButton.addEventListener('click', () => {
            currentSlide = (currentSlide + 1) % slides.length;
            showSlides();
        });

        // Gestionnaire d'événements pour le bouton Précédent du carrousel
        prevButton.addEventListener('click', () => {
            currentSlide = (currentSlide - 1 + slides.length) % slides.length;
            showSlides();
        });

        showSlides(); // Appel initial pour définir la première diapositive
    });
</script>
