<?php
session_start();
if (!isset($_SESSION['user_id'])) {
    header('Location: login.php');
    exit;
}

$conn = new mysqli('localhost', 'root', '', 'beeznet');
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

$users = [];
$friends = [];
$search = "";

// Recherche des utilisateurs
if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST['search'])) {
    $search = $_POST['search'];
    $stmt = $conn->prepare("SELECT c.*, p.photo,
                                   (SELECT status FROM FriendRequests WHERE sender_id = ? AND receiver_id = c.id) AS sent_status,
                                   (SELECT status FROM FriendRequests WHERE receiver_id = ? AND sender_id = c.id) AS received_status
                            FROM Comptes c
                            LEFT JOIN profils p ON c.id = p.user_id
                            WHERE c.username LIKE ? AND c.id <> ?");
    $searchTerm = "%" . $search . "%";
    $stmt->bind_param("iisi", $_SESSION['user_id'], $_SESSION['user_id'], $searchTerm, $_SESSION['user_id']);
    $stmt->execute();
    $result = $stmt->get_result();
    while ($row = $result->fetch_assoc()) {
        $users[] = $row;
    }
    $stmt->close();
}

// Envoyer une demande d'amitié
if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST['receiver_id'])) {
    $receiver_id = $_POST['receiver_id'];
    // Vérifier si la demande existe déjà
    $checkStmt = $conn->prepare("SELECT * FROM FriendRequests WHERE sender_id = ? AND receiver_id = ?");
    $checkStmt->bind_param("ii", $_SESSION['user_id'], $receiver_id);
    $checkStmt->execute();
    if ($checkStmt->get_result()->num_rows == 0) {
        $stmt = $conn->prepare("INSERT INTO FriendRequests (sender_id, receiver_id, status) VALUES (?, ?, 'pending')");
        $stmt->bind_param("ii", $_SESSION['user_id'], $receiver_id);
        $stmt->execute();
        $stmt->close();
    }
    $checkStmt->close();
}

// Récupération de la liste des amis
$stmt = $conn->prepare("SELECT c.id, c.username, p.photo FROM FriendRequests f
                        JOIN Comptes c ON c.id = f.receiver_id
                        LEFT JOIN profils p ON c.id = p.user_id
                        WHERE f.sender_id = ? AND f.status = 'accepted'
                        UNION
                        SELECT c.id, c.username, p.photo FROM FriendRequests f
                        JOIN Comptes c ON c.id = f.sender_id
                        LEFT JOIN profils p ON c.id = p.user_id
                        WHERE f.receiver_id = ? AND f.status = 'accepted'");
$stmt->bind_param("ii", $_SESSION['user_id'], $_SESSION['user_id']);
$stmt->execute();
$result = $stmt->get_result();
while ($row = $result->fetch_assoc()) {
    $friends[] = $row;
}
$stmt->close();
$conn->close();
