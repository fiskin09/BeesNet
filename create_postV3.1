<?php
session_start();
if (!isset($_SESSION['user_id'])) {
    header("Location: connexion.php");
    exit;
}

// Connexion à la base de données
$conn = new mysqli('localhost', 'root', '', 'beeznet');
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

$error = '';
if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $description = $conn->real_escape_string($_POST['description']);
    $user_id = $_SESSION['user_id'];

    // Définir le répertoire de téléchargement
    $target_dir = "uploads/";
    if (!is_dir($target_dir)) {
        mkdir($target_dir, 0777, true);
    }

    // Upload de l'image
    $image = null;
    if (!empty($_FILES['image']['name'])) {
        $target_file = $target_dir . basename($_FILES['image']['name']);
        if (move_uploaded_file($_FILES['image']['tmp_name'], $target_file)) {
            $image = $target_file;
        } else {
            $error = "Désolé, une erreur s'est produite lors du téléchargement de votre fichier.";
        }
    }

    if (empty($error)) {
        // Insertion du post dans la base de données
        $stmt = $conn->prepare("INSERT INTO posts (user_id, description, image) VALUES (?, ?, ?)");
        $stmt->bind_param("iss", $user_id, $description, $image);
        if ($stmt->execute()) {
            header("Location: index.php");
            exit;
        } else {
            $error = "Erreur lors de la création du post.";
        }
        $stmt->close();
    }
}

$conn->close();
