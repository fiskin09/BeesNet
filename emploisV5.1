                    }
                });
            }

            // Gérer le clic sur le bouton "suivant"
            nextButton.addEventListener('click', () => {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlides();
            });

            // Gérer le clic sur le bouton "précédent"
            prevButton.addEventListener('click', () => {
                currentSlide = (currentSlide - 1 + slides.length) % slides.length;
                showSlides();
            });

            showSlides(); // Appel initial pour définir la première diapositive
        });
    });

    // JavaScript pour gérer l'affichage du pop-up
    document.addEventListener('DOMContentLoaded', function() {
        const popup = document.getElementById('popup');
        const popupClose = document.getElementById('popup-close');

        // Afficher le pop-up après 3 secondes
        setTimeout(() => {
            popup.style.display = 'flex';
        }, 3000);

        // Fermer le pop-up lorsqu'on clique sur le bouton de fermeture
        popupClose.addEventListener('click', () => {
            popup.style.display = 'none';
        });

        // Fermer le pop-up lorsqu'on clique en dehors du contenu
        popup.addEventListener('click', (e) => {
            if (e.target === popup) {
                popup.style.display = 'none';
            }
        });
    });
</script>

