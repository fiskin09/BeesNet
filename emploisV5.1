<script>
    // Fonction pour télécharger un CV
    function uploadCV(cvFileId) {
        // Récupérer l'élément input de type fichier contenant le CV
        const cvFileInput = document.getElementById(cvFileId);
        // Vérifier si un fichier a été sélectionné
        if (cvFileInput.files.length === 0) {
            alert("Veuillez sélectionner un fichier avant de postuler.");
            return;
        }

        // Créer un objet FormData pour envoyer les données du formulaire
        const formData = new FormData();
        formData.append("cvFile", cvFileInput.files[0]);

        // Envoyer une requête fetch POST pour télécharger le CV
        fetch("upload.php", {
            method: "POST",
            body: formData
        })
        .then(response => response.text())
        .then(result => {
            alert("CV uploadé avec succès !");
        })
        .catch(error => {
            alert("Erreur lors de l'upload du CV.");
            console.error("Erreur:", error);
        });
    }

