<?php
session_start(); // Start the session to keep track of the connected user
$message = '';

// Database connection parameters
$conn = new mysqli('localhost', 'root', '', 'beeznet');
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $_POST['username'];
    $password = $_POST['password']; // Password in plain text for testing
    $email = $_POST['email'];

    // Check for the uniqueness of the username
    $stmt = $conn->prepare("SELECT id FROM comptes WHERE username = ?");
    $stmt->bind_param("s", $username);
    $stmt->execute();
    $stmt->store_result();

    if ($stmt->num_rows > 0) {
        $message = 'Nom d\'utilisateur déjà pris.';
    } else {
        // Start the transaction
        $conn->begin_transaction();

        try {
            // Insert the new user
            $stmt = $conn->prepare("INSERT INTO comptes (username, password, email) VALUES (?, ?, ?)");
            $stmt->bind_param("sss", $username, $password, $email);
            if ($stmt->execute()) {
                // Retrieve the ID of the new account
                $new_user_id = $stmt->insert_id;

                // Insert the corresponding profile with default image
                $defaultPhoto = 'uploads/nobody.jpg';
                $stmt = $conn->prepare("INSERT INTO profils (user_id, photo) VALUES (?, ?)");
                $stmt->bind_param("is", $new_user_id, $defaultPhoto);
                $stmt->execute();

                // Commit the transaction
                $conn->commit();

                // Store the user ID in the session
                $_SESSION['user_id'] = $new_user_id;

                // Redirect to the user search page
                header("Location: index.php");
                exit;
            } else {
                throw new Exception('Erreur lors de la création du compte.');
            }
        } catch (Exception $e) {
            // Rollback the transaction in case of an error
            $conn->rollback();
            $message = $e->getMessage();
        }
    }
    $stmt->close();
}
$conn->close();
?>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer un compte - BeesNet</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Oswald:wght@200..700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: Oswald, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #ffbd49;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            background-color: #FFFFFF;
            color: #ffbd49;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }
        h1 {
            font-family: 'Lobster', sans-serif;
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 8px;
            text-align: left;
        }
        input[type="text"],
        input[type="password"],
        input[type="email"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        input[type="submit"] {
            background-color: #ffbd49;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        input[type="submit"]:hover {
            background-color: #e5a837;
        }
        p {
            margin-top: 20px;
        }
        a {
            color: #ffbd49;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Créer un compte</h1>
    <form method="POST">
        <label for="username">Nom d'utilisateur:</label>
        <input type="text" id="username" name="username" required>

        <label for="password">Mot de passe:</label>
        <input type="password" id="password" name="password" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <input type="submit" value="Créer un compte">
    </form>
    <?php if ($message !== '') echo "<p>$message</p>"; ?>
    <p>Vous avez déjà un compte? <a href="connexion.php">Connectez-vous</a></p>
</div>
</body>
