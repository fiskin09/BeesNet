<?php
session_start();
if (!isset($_SESSION['user_id'])) {
    header('Location: connexion.php');
    exit;
}

$conn = new mysqli('localhost', 'root', '', 'beeznet');
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Récupérer la liste des amis
$friends = [];
$stmt = $conn->prepare("SELECT c.id, c.username FROM FriendRequests f JOIN Comptes c ON (c.id = f.receiver_id OR c.id = f.sender_id) WHERE (f.sender_id = ? OR f.receiver_id = ?) AND f.status = 'accepted' AND c.id <> ?");
$stmt->bind_param("iii", $_SESSION['user_id'], $_SESSION['user_id'], $_SESSION['user_id']);
$stmt->execute();
$result = $stmt->get_result();
while ($row = $result->fetch_assoc()) {
    $friends[] = $row;
}
$stmt->close();

// Récupérer les messages si un ami est sélectionné
$messages = [];
if (isset($_GET['friend_id'])) {
    $friend_id = $_GET['friend_id'];
    $stmt = $conn->prepare("SELECT m.*, c.username AS sender_name FROM Messages m JOIN Comptes c ON m.sender_id = c.id WHERE (m.sender_id = ? AND m.receiver_id = ?) OR (m.sender_id = ? AND m.receiver_id = ?) ORDER BY m.timestamp ASC");
    $stmt->bind_param("iiii", $_SESSION['user_id'], $friend_id, $friend_id, $_SESSION['user_id']);
    $stmt->execute();
    $result = $stmt->get_result();
    while ($row = $result->fetch_assoc()) {
        $messages[] = $row;
    }
    $stmt->close();

    // Marquer les messages comme lus
    $stmt = $conn->prepare("UPDATE Messages SET is_read = TRUE WHERE sender_id = ? AND receiver_id = ? AND is_read = FALSE");
    $stmt->bind_param("ii", $friend_id, $_SESSION['user_id']);
    $stmt->execute();
    $stmt->close();
}

// Gérer l'envoi de message
if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST['receiver_id']) && isset($_POST['message'])) {
    $receiver_id = $_POST['receiver_id'];
    $message = $_POST['message'];
    $sender_id = $_SESSION['user_id'];
    
    // Insertion du message dans la base de données
    $stmt = $conn->prepare("INSERT INTO Messages (sender_id, receiver_id, message, timestamp, is_read) VALUES (?, ?, ?, NOW(), FALSE)");
    $stmt->bind_param("iis", $sender_id, $receiver_id, $message);
    $stmt->execute();
    $stmt->close();

    // Récupérer le nom d'utilisateur de l'expéditeur
    $stmt = $conn->prepare("SELECT username FROM Comptes WHERE id = ?");
    $stmt->bind_param("i", $sender_id);
    $stmt->execute();
    $stmt->bind_result($sender_username);
    $stmt->fetch();
    $stmt->close();

    // Enregistrement de la notification pour le destinataire
    $notification_msg = $sender_username . " vous a envoyé un message";
    $stmt = $conn->prepare("INSERT INTO Notifications (user_id, message) VALUES (?, ?)");
    $stmt->bind_param("is", $receiver_id, $notification_msg);
    $stmt->execute();
    $stmt->close();
    
    $success_message = "Message envoyé avec succès!";
    
    // Rediriger pour éviter la réémission du formulaire
    header("Location: messagerie.php?friend_id=" . $receiver_id);
    exit;
}


$conn->close();
