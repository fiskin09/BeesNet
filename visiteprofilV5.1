<?php
session_start(); // Démarrer la session utilisateur

// Rediriger vers la page de connexion si l'utilisateur n'est pas connecté
if (!isset($_SESSION['user_id'])) {
    header("Location: connexion.php");
    exit;
}

// Connexion à la base de données MySQL
$conn = new mysqli('localhost', 'root', '', 'beeznet');
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error); // Arrêter le script si la connexion échoue
}

// Compter les demandes d'ami en attente pour l'utilisateur connecté
$request_stmt = $conn->prepare("SELECT COUNT(*) as pending_requests FROM FriendRequests WHERE receiver_id = ? AND status = 'pending'");
$request_stmt->bind_param("i", $_SESSION['user_id']);
$request_stmt->execute();
$request_result = $request_stmt->get_result();
$request_count = $request_result->fetch_assoc()['pending_requests'];
$request_stmt->close();

// Compter les messages non lus pour l'utilisateur connecté
$unread_messages_stmt = $conn->prepare("SELECT COUNT(*) as unread_messages FROM Messages WHERE receiver_id = ? AND is_read = FALSE");
$unread_messages_stmt->bind_param("i", $_SESSION['user_id']);
$unread_messages_stmt->execute();
$unread_messages_result = $unread_messages_stmt->get_result();
$unread_messages_count = $unread_messages_result->fetch_assoc()['unread_messages'];
$unread_messages_stmt->close();

$user_id = isset($_GET['user_id']) ? intval($_GET['user_id']) : 0;

// Récupérer la photo de profil de l'utilisateur connecté
$photo_stmt = $conn->prepare("SELECT photo FROM Profils WHERE user_id = ?");
$photo_stmt->bind_param("i", $_SESSION['user_id']);
$photo_stmt->execute();
$photo_result = $photo_stmt->get_result();
$photo = $photo_result->fetch_assoc()['photo'];
$photo_stmt->close();

// Vérifier si l'utilisateur spécifié est valide
if ($user_id === 0) {
    echo "Utilisateur non spécifié!"; // Afficher un message d'erreur et arrêter le script
    exit;
}

// Récupérer les amis de l'utilisateur visité
$friends_stmt = $conn->prepare("
    SELECT c.id, c.username, p.photo 
    FROM comptes c
    JOIN FriendRequests f ON (f.receiver_id = c.id OR f.sender_id = c.id)
    LEFT JOIN profils p ON c.id = p.user_id
    WHERE (f.receiver_id = ? OR f.sender_id = ?) AND f.status = 'accepted'
    AND c.id <> ?
");
$friends_stmt->bind_param("iii", $user_id, $user_id, $user_id);
$friends_stmt->execute();
$friends_result = $friends_stmt->get_result();
$visitor_friends = [];
while ($friend = $friends_result->fetch_assoc()) {
    $visitor_friends[] = $friend;
}
$friends_stmt->close();

// Récupérer les informations du profil de l'utilisateur spécifié
$stmt = $conn->prepare("
    SELECT c.username, c.email AS email_compte, p.photo, p.nom, p.prenom, p.formations, p.projets, p.experiences, p.etudes_en_cours, p.habitation, p.date_de_naissance, p.centre_d_interet, p.biographie,
           (SELECT CASE WHEN EXISTS (
               SELECT 1 FROM FriendRequests 
               WHERE (sender_id = ? AND receiver_id = ? OR sender_id = ? AND receiver_id = ?) 
               AND status = 'accepted'
           ) THEN 1 ELSE 0 END) AS is_friend
    FROM comptes c 
    LEFT JOIN profils p ON c.id = p.user_id
    WHERE c.id = ?
");
$stmt->bind_param("iiiii", $_SESSION['user_id'], $user_id, $user_id, $_SESSION['user_id'], $user_id);
$stmt->execute();
$result = $stmt->get_result();
$profile = $result->fetch_assoc();
$is_friend = (bool)($profile['is_friend']);
$stmt->close();

$posts = [];

// Vérifier si l'utilisateur est un ami ou s'il consulte son propre profil
if ($is_friend || $_SESSION['user_id'] == $user_id) {
    // Récupérer les publications de l'utilisateur spécifié
    $post_stmt = $conn->prepare("
        SELECT post_id, description, image, post_date
        FROM posts
        WHERE user_id = ?
        ORDER BY post_date DESC
    ");
    $post_stmt->bind_param("i", $user_id);
    $post_stmt->execute();
    $posts_result = $post_stmt->get_result();
    while ($row = $posts_result->fetch_assoc()) {
        $posts[] = $row;
    }
    $post_stmt->close();
}

$conn->close(); // Fermer la connexion à la base de données
