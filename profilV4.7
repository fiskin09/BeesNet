session_start();
if (!isset($_SESSION['user_id'])) {
    header("Location: connexion.php");
    exit;
}

// Connexion à la base de données
$conn = new mysqli('localhost', 'root', '', 'beeznet');
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Compter les demandes d'ami en attente
$request_stmt = $conn->prepare("SELECT COUNT(*) as pending_requests FROM FriendRequests WHERE receiver_id = ? AND status = 'pending'");
$request_stmt->bind_param("i", $_SESSION['user_id']);
$request_stmt->execute();
$request_result = $request_stmt->get_result();
$request_count = $request_result->fetch_assoc()['pending_requests'];
$request_stmt->close();

// Compter les messages non lus
$unread_messages_stmt = $conn->prepare("SELECT COUNT(*) as unread_messages FROM Messages WHERE receiver_id = ? AND is_read = FALSE");
$unread_messages_stmt->bind_param("i", $_SESSION['user_id']);
$unread_messages_stmt->execute();
$unread_messages_result = $unread_messages_stmt->get_result();
$unread_messages_count = $unread_messages_result->fetch_assoc()['unread_messages'];
$unread_messages_stmt->close();

// Récupérer la photo de profil
$photo_stmt = $conn->prepare("SELECT photo FROM Profils WHERE user_id = ?");
$photo_stmt->bind_param("i", $_SESSION['user_id']);
$photo_stmt->execute();
$photo_result = $photo_stmt->get_result();
$photo = $photo_result->fetch_assoc()['photo'];
$photo_stmt->close();


// Récupérer les informations de l'utilisateur
$user_id = $_SESSION['user_id'];
$stmt = $conn->prepare("SELECT c.username, c.email AS email_compte, p.photo, p.nom, p.prenom, p.formations, p.projets, p.experiences, p.etudes_en_cours, p.habitation, p.date_de_naissance, p.centre_d_interet, p.biographie
                        FROM comptes c 
                        LEFT JOIN profils p ON c.id = p.user_id 
                        WHERE c.id = ?");

$stmt->bind_param("i", $user_id);
$stmt->execute();
$result = $stmt->get_result();
$profile = $result->fetch_assoc();

// Gestion de la soumission du formulaire
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $nom = $_POST['nom'] ?? '';
    $prenom = $_POST['prenom'] ?? '';
    $formations = $_POST['formations'] ?? '';
    $projets = $_POST['projets'] ?? '';
    $experiences = $_POST['experiences'] ?? '';
    $etudes_en_cours = $_POST['etudes_en_cours'] ?? '';
    $habitation = $_POST['habitation'] ?? '';
    $date_de_naissance = $_POST['date_de_naissance'] ?? '';
    $centre_d_interet = $_POST['centre_d_interet'] ?? '';
    $biographie = $_POST['biographie'] ?? '';

    // Gestion du téléchargement de la photo de profil
    if (!empty($_FILES['photo']['name'])) {
        $photo = $_FILES['photo'];
        $targetDir = "uploads/";
        $targetFile = $targetDir . basename($photo["name"]);
        $imageFileType = strtolower(pathinfo($targetFile, PATHINFO_EXTENSION));

        // Vérification de l'existence du répertoire et création si nécessaire
        if (!is_dir($targetDir)) {
            mkdir($targetDir, 0777, true);
        }

        // Vérification du type de fichier
        $check = getimagesize($photo["tmp_name"]);
        if($check !== false) {
            // Limitation de la taille du fichier (5MB maximum)
            if ($photo["size"] <= 5000000) {
                // Autoriser certains formats de fichier
                if($imageFileType == "jpg" || $imageFileType == "png" || $imageFileType == "jpeg" || $imageFileType == "gif" ) {
                    if (move_uploaded_file($photo["tmp_name"], $targetFile)) {
                        $photoPath = $conn->real_escape_string($targetFile);
                        $updatePhotoQuery = "UPDATE profils SET photo = '$photoPath' WHERE user_id = $user_id";
                        $conn->query($updatePhotoQuery);
                    } else {
                        die("Erreur lors du téléchargement de votre fichier.");
                    }
                } else {
                    die("Désolé, seuls les fichiers JPG, JPEG, PNG & GIF sont autorisés.");
                }
            } else {
                die("Désolé, votre fichier est trop volumineux.");
            }
        } else {
            die("Le fichier n'est pas une image.");
        }
    }

    // Mettre à jour la base de données pour les profils
    $updateQuery = "UPDATE profils SET nom=?, prenom=?, formations=?, projets=?, experiences=?, etudes_en_cours=?, habitation=?, date_de_naissance=?, centre_d_interet=?, biographie=? WHERE user_id=?";
    $stmtUpdate = $conn->prepare($updateQuery);
    if ($stmtUpdate === false) {
        die('Erreur de préparation : ' . htmlspecialchars($conn->error));
    }
    $stmtUpdate->bind_param("ssssssssssi", $nom, $prenom, $formations, $projets, $experiences, $etudes_en_cours, $habitation, $date_de_naissance, $centre_d_interet, $biographie, $user_id);
    $stmtUpdate->execute();
    if ($stmtUpdate->error) {
        die('Erreur d\'exécution : ' . htmlspecialchars($stmtUpdate->error));
    }

    header("Location: profil.php");
    exit;
}

